{
  "run": {
    "engine": "docker",
    "entry": "main.c",
    "steps": [
      {
        "box": "zephyr",
        "user": "root",
        "command": [
          "west",
          "build",
          "-b",
          "native_sim",
          "app/"
        ]
      },
      {
        "box": "zephyr",
        "user": "root",
        "timeout": 20,
        "command": [
          "timeout",
          "5",
          "./build/zephyr/zephyr.exe"
        ]
      }
    ]
  }
}